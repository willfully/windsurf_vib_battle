<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Directory</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <div class="page-container">
        <header class="site-header">
            <h1 class="logo-text">User Directory</h1>
            <nav class="nav-links">
                <a href="/" class="nav-link">Home</a>
                <a href="/users" class="nav-link active">User Directory</a>
            </nav>
        </header>

        <main class="content-area">
            <% if (error) { %>
                <div class="error-banner">
                    <strong>Error:</strong> <%= error %>
                </div>
            <% } %>

            <section class="tron-card">
                <div class="card-title">
                    <h2>Roster Status</h2>
                    <p><span class="highlight"><%= users ? users.length : 0 %></span> programs synced to the grid.</p>
                </div>

                <% if (!users || users.length === 0) { %>
                    <div class="empty-state">
                        Awaiting first transmission. Share the access link to light up the roster.
                    </div>
                <% } else { %>
                    <div class="table-wrapper">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Nickname</th>
                                    <th>City</th>
                                    <th>Synced At</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((user) => { %>
                                    <tr>
                                        <td><%= user.email %></td>
                                        <td><%= user.nickname %></td>
                                        <td><%= user.city %></td>
                                        <td class="timestamp"><%= new Date(user.created_at).toLocaleString() %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>

                <div class="button-group" style="margin-top: 24px;">
                    <a href="/" class="tron-button secondary">Back to Entry Portal</a>
                </div>
            </section>
        </main>

        <footer>Neon Node Collective Â· 2025</footer>
    </div>
</body>
</html>
